@{
    ViewBag.Title = "Home Page";

    // Assuming you've passed these values from your controller
    var occupiedRatio = ViewBag.OccupiedRatio;
    var unoccupiedRatio = ViewBag.UnoccupiedRatio;
    var RentReceived = ViewBag.RentReceived;
    var RentOverdue = ViewBag.RentOverdue;
    var notices = ViewBag.Notices;

}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
    <style>
        .main {
            margin-left: 230px;
            margin-top: 50px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .card-1 {
            border: none;
            height: 230px;
            width: 310px;
            border-radius: 10px;
            margin: 10px;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-2 {
            border: none;
            height: 230px;
            width: 310px;
            border-radius: 10px;
            margin: 10px;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-3 {
            border: none;
            height: 230px;
            width: 510px;
            border-radius: 10px;
            margin: 10px;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-4 {
            border: none;
            height: 310px;
            width: 540px;
            border-radius: 10px;
            margin: 10px;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-5 {
            border: none;
            height: 310px;
            width: 650px;
            border-radius: 10px;
            margin: 10px;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
        }

        #piechartdiv {
            width: 100%;
            height: 500px;
            margin-top: -140px;
        }

        #billchartdiv {
            width: 100%;
            height: 500px;
            margin-left: 100px;
        }

        .progress {
            margin-top: 20px;
            margin-left: 35px;
            width: 80%;
            height: 30px;
        }

        .card-1 label {
            margin-top: 18px;
            margin-left: 20px;
            font-size: 25px;
        }

        .card-2 label {
            margin-top: 18px;
            margin-left: 20px;
            font-size: 25px;
        }

        .col-md-8 offset-md-2 {
            width: 150px;
            height: 50px;
        }

        .card-3 ul {
            list-style-type: none;
            padding: 0;
        }

        .card-3 li {
          /*  display: flex;
            justify-content: space-between;
            align-items: center;*/
            margin-bottom: 20px;
        }


        .card-3 button {
            margin-left: 20px;
            box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
            background-color: white;
            color: black;
            border: none;
            font-size: 17px;
            font-weight: 300;
            border-radius: 5px;
            padding: 7px 100px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .card-3 button:hover {
                background-color: rgb(233, 233, 233);
            }

        .chart-container {
            width: 80%;
            margin: auto;
        }

        canvas {
            max-width: 100%;
            max-height: 500px;
        }

        .main p {
            font-size: 15px;
            padding: 10px;
            font-weight: bold;
        }

        #icon {
            margin-left: 30px;
            background-color: #c2f2c5;
            padding: 10px;
            border-radius: 50%;
            color: green;
        }

        #unicon {
            margin-left: 30px;
            background-color: #f2c2c2;
            padding: 10px;
            border-radius: 50%;
            color: red;
        }

    </style>
</head>
<body>
    <div class="main">
        <div class="card-1">
            <p>Rent Received</p>
            <span class="material-symbols-outlined " id="icon">
                paid
            </span>
            <label>@RentReceived$</label>
            <div class="progress" role="progressbar" aria-label="Success striped example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar progress-bar-striped bg-success" style="width: @ViewBag.RentReceivedPercentage%"></div>
            </div>
        </div>

        <div class="card-2">
            <p>Rent Due</p>
            <span class="material-symbols-outlined" id="unicon">
                receipt_long
            </span>
            <label>@RentOverdue$</label>
            <div class="progress" role="progressbar" aria-label="Danger striped example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar progress-bar-striped bg-danger" style="width: @ViewBag.RentOverduePercentage%"></div>
            </div>
        </div>

        <div class="card-3">
            <p>Notice Board</p>
            <ul>
                @foreach (var notice in notices)
                {
                    <li>
                        <button onclick="openNoticePage(@notice.NoticeID)">
                            @notice.NoticeDescription
                        </button>
                    </li>
                }
            </ul>
        </div>

        <div class="card-4">
            <p>Occupancy Rate</p>
            <script src="https://cdn.amcharts.com/lib/5/index.js"></script>
            <script src="https://cdn.amcharts.com/lib/5/percent.js"></script>
            <script src="https://cdn.amcharts.com/lib/5/themes/Animated.js"></script>
            <div id="piechartdiv"></div>
            <script>
window.occupancyData = [
{ sector: "Occupied", size: @occupiedRatio },
{ sector: "Unoccupied", size: @unoccupiedRatio }
];
            </script>
            <script src="~/Scripts/check.js"></script>
        </div>

        <div class="card-5">
            <p>Cash Flow</p>
            <div class="chart-container">
                <canvas id="clusteredBarChart"></canvas>
            </div>
            <script>
               document.addEventListener("DOMContentLoaded", function () {
    var incomeData = @Html.Raw(Json.Encode(ViewBag.Income));
    var expenseData = @Html.Raw(Json.Encode(ViewBag.Expense));


    var ctx = document.getElementById('clusteredBarChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['January','February','March','April','May','June','July','August','September','October','November','December'],
            datasets: [
                {
                    label: 'Expense',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    data: expenseData
                },
                {
                    label: 'Income',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    data: incomeData
                }
            ]
        },
        options: {
            scales: {
                x: {
                    stacked: true
                },
                y: {
                    beginAtZero: true
                }
            }
        }
    });
});
            </script>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</body>
