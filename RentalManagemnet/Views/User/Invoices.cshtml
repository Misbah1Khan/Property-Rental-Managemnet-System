@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>

    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        margin-top: 100px;
        margin-left: 270px;
    }

    .main-body {
        margin-top: 50px;
        margin-left: 350px;
    }

    h2 {
        color: #333;
        font-size: 24px;
    }

    .table {
        border-radius: 10px;
        width: 90%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f8f8;
            color: #333;
            position: relative;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid transparent;
            border-radius: 3px;
        }

            .table a:hover {
                background-color: #007bff;
                color: #fff;
                border-color: #007bff;
            }

    button {
        background-color: white;
        color: #007bff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        gap: 5px;
        text-decoration: none;
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
    }

        button:hover {
            background-color: #007bff;
            color: #fff;
        }
</style>
<h2>Invoices</h2>
<h3>Unpaid Bills</h3>
<table class="table">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Property ID</th>
            <th>Issue Date</th>
            <th>Due Date</th>
            <th>Amount Pending</th>
            <th>Invoice Type</th>
            <th>Invoice Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in ViewBag.Unpaid)
        {
            <tr>
                <td>@invoice.invoiceID</td>
                <td>@invoice.propertyID</td>
                <td>@invoice.issueDate</td>
                <td>@invoice.dueDate</td>
                <td>@invoice.amountDue</td>
                <td>@invoice.invoiceType</td>
                <td>@invoice.invoiceStatus</td>
                <td>
                    @Html.ActionLink("Pay", "PayInvoice", new { id = invoice.invoiceID })
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Paid Bills</h3>
<table class="table">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Property ID</th>
            <th>Issue Date</th>
            <th>Due Date</th>
            <th>Amount Pending</th>
            <th>Invoice Type</th>
            <th>Invoice Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in ViewBag.Paid)
        {
            <tr>
                <td>@invoice.invoiceID</td>
                <td>@invoice.propertyID</td>
                <td>@invoice.issueDate</td>
                <td>@invoice.dueDate</td>
                <td>@invoice.amountDue</td>
                <td>@invoice.invoiceType</td>
                <td>@invoice.invoiceStatus</td>
            </tr>
        }
    </tbody>
</table>