@model RentalManagemnet.Models.Tenant
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        margin-top: 100px;
        margin-left: 270px;
    }

    .main-body {
        margin-top: 50px;
        margin-left: 150px;
    }

    h3 {
        color: #333;
        font-size: 24px;
    }

    .profile-section {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        padding: 20px;
        width: 80%;
    }

    .profile-item {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

        .profile-item:last-child {
            border-bottom: none;
        }

    .profile-label {
        font-weight: bold;
        color: #333;
    }

    .profile-value {
        margin-left: 10px;
        color: #555;
    }

        .profile-value ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .profile-value ul li {
                margin: 5px 0;
            }
</style>

<div class="main-body">
    <h3>User Profile</h3>

    <div class="profile-section">
        <div class="profile-item">
            <span class="profile-label">ID:</span>
            <span class="profile-value">@Model.tenantID</span>
        </div>
        <div class="profile-item">
            <span class="profile-label">Name:</span>
            <span class="profile-value">@Model.tenantName</span>
        </div>
        <div class="profile-item">
            <span class="profile-label">Phone No:</span>
            <span class="profile-value">@Model.tenantPhone</span>
        </div>
        <div class="profile-item">
            <span class="profile-label">CNIC:</span>
            <span class="profile-value">@Model.CNIC</span>
        </div>
        <div class="profile-item">
            <span class="profile-label">Property No:</span>
            <span class="profile-value">@ViewBag.propertyCount</span>
        </div>
        <div class="profile-item">
            <span class="profile-label">Bills Unpaid:</span>
            <span class="profile-value">@ViewBag.unpaidcount</span>
        </div>
    </div>

</div>